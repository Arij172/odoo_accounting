<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="accounting_invoices_tree_view" model="ir.ui.view">
            <field name="name">accounting.invoices.list</field>
            <field name="model">accounting.invoices</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="best_offer"/>
                    <field name="selling_price"/>
                </list>
            </field>
        </record>


        <record id="accounting_invoices_form_view" model="ir.ui.view">
            <field name="name">accounting.invoices.form</field>
            <field name="model">accounting.invoices</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <group>
                                <field name="type_id"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_offer"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_invoices" model="ir.actions.act_window">
            <field name="name">Invoices</field>
            <field name="res_model">accounting.invoices</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="accounting_invoices_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create an Invoice to Advertise
                </p>
            </field>
        </record>
    </data>
</odoo>